@using Ecommerce.Web.Commons;
@using Ecommerce.Web.Models;
@model User

<div class="form-group">
    <label asp-for="Username" class="form-label"></label>
    <input asp-for="Username" class="form-control" type="text" maxlength="20" />
</div>
<div class="form-group">
    <label asp-for="Password" class="form-label"></label>
    <input asp-for="Password" class="form-control" type="text" maxlength="20" />
</div>
<div class="form-group">
    <label asp-for="FullName" class="form-label"></label>
    <input asp-for="FullName" class="form-control" type="text" maxlength="20" />
</div>
<div class="form-group">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" type="email" />
</div>
<div class="form-group">
    <label asp-for="PhoneNumber" class="form-label"></label>
    <input asp-for="PhoneNumber" class="form-control" type="text" />
</div>
<div class="form-group">
    <label asp-for="Address" class="form-label"></label>
    <textarea asp-for="Address" class="form-control" rows="3" placeholder="..."></textarea>
</div>
<div class="modal-footer">
    <button id="btnSave"
            type="submit"
            class="btn btn-info">
        บันทึก
    </button>
</div>
<div hidden="hidden">
    <input asp-for="UserId" class="form-control" type="text"/>
    <input asp-for="PositionId" class="form-control" type="text" />
    <input asp-for="Status" class="form-control" type="text" />
</div>
