@using Ecommerce.Web.Commons;
@using Ecommerce.Web.Models;
@model CategoryViewModel

<form id="frmDetail">
    <div class="form-group">
        <label asp-for="Category.CategoryName" class="form-label"></label>
        <input asp-for="Category.CategoryName" class="form-control" type="text" maxlength="20" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Category.Status" class="form-label"></label>
        <select asp-for="Category.Status" class="form-control" style="width: 100%;">
            <option selected="selected">กรุณาเลือก</option>
            <option value="A">ใช้งาน</option>
            <option value="I">ไม่ได้ใช้งาน</option>
        </select>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">ปิด</button>
        <button id="btnSave"
                type="button"
                class="btn btn-info"
                onclick="saveForm('frmDetail','@Url.Content(Constants.UrlAction.Category.Save)')">
            บันทึก
        </button>
    </div>
    <div style="display: none">
        @{
            await Html.RenderPartialAsync("_HiddenValue", Model);
        }
    </div>
</form>
@{
    await Html.RenderPartialAsync("_PopUpScriptsPartial", Model);
}